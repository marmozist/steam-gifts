{
    "name": "marmozist/steam-gifts",
    "description": "PHP client for SteamGifts",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrey Gotmanov",
            "email": "gotman.man@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Marmozist\\SteamGifts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Marmozist\\Tests\\SteamGifts\\": "tests/"
        }
    },
    "require": {
        "myclabs/php-enum": "^1.7",
